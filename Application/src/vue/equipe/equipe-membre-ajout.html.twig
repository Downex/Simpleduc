{% extends "base.html.twig" %}

{% block title %} {{ parent() }} - Ajouter des membres {% endblock %}

{% block contenu %}
<h1> Ajout de membre dans l'équipe <strong>{{equipe.libelle}}</strong></h1>
<h2>Liste des développeurs</h2>
{% if form.valide is defined %}
    {% if form.valide == true %}
        <h1 class="h3 mb-3 font-weight-normal alert-success">{{ form.message }}</h1>
    {% else %}
        <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1>
    {% endif %}
{% endif %}

<form class="form-signin" action="index.php?page=equipemembreajout&id={{equipe.id}}" method="post" enctype="application/x-www-form-urlencoded">
    <div class="form-group pull-left">
        <input type="text" class="search form-control" placeholder="Recherche">
    </div>
    <span class="counter pull-left"></span>   
    <input type="submit" class="btn pull-right background-violet" name="btAjouter" value="Ajouter"></input>        
        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap results" cellspacing="0" width="100%" height="100%" style="margin-bottom: 10%;">
            <thead>
            <tr>
                <th class="">Email</th>
                <th class="">Nom</th>
                <th class="">Prénom</th>
                <th class="">Téléphone</th>
                <th class="">Cout horaire</th>
                <th class="">Indice de rémunération</th>
                <th class="">Ajouter à l'équipe</th>
            </tr>
            <tr class="warning no-result">
                <td colspan="10"><i class="fa fa-warning black">Pas de résultat</i></td>
            </tr>
            </thead>
            <tbody>
                {% for e in liste %}
                    <tr>
                        <td>
                            <a href="index.php?page=utilisateurinfo&id={{e.idDev}}">{{e.idDev}}</a>
                        </td>
                        <td>
                            {{e.nom}}
                        </td>
                        <td>
                            {{e.prenom}}
                        </td>
                        <td>
                            {{e.tel}}
                        </td>
                        <td>
                            {{e.coutHoraire}}
                        </td>
                        <td>
                            {{e.indiceRemuneration}}
                        </td>
                        <td>
                            <input type="checkbox" name="Developpeur[]" value="{{e.idDev}}"></input>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </form>
</div>

{% endblock %}


