    <!-- Modal -->
    <div class="modal fade" id="modalAjout" role="dialog"> 
        <div class="modal-dialog">
        
        <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Ajouter une équipe</h4>
                </div>
                <div class="modal-body">
                    <div class="panel-body">
                        <form  class="form-signin" action="index.php?page=equipeajout" method="post" enctype="application/x-www-form-urlencoded">
                            <div class="form-group">
                                <label for="inputDesignation">Libellé :</label>
                                <input type="text" id="inputLibelle" name="inputLibelle" class="form-control" placeholder="Saisir un libellé" required autofocus>
                            </div>
                            <div class="form-group">
                                <label for="inputIdResponsable">Responsable :</label>
                                <select name="inputIdResponsable" class="form-control">
                                    <option value="{{session.login}}">{{session.nom}} {{session.prenom}}</option>
                                    {% if session.role == 1 %}
                                    <option value="non">Responsable non identifié</option> 
                                    {% for r in form.liste %}
                                    <option value="{{ r.email }}">{{ r.nom }} {{ r.prenom }}</option> 
                                    {% endfor %}  
                                    {% endif %}
                                </select>  
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-default pull-left background-violet" type="submit" data-toggle="modal" data-target="#modalPopUp" name="btAjouter">Ajouter</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                            </div> 
                        </form>
                    </div>    
                </div>
            </div>    
        </div>
    </div>

