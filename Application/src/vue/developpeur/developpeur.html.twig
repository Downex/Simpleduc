{% extends "base.html.twig" %}

{% block title %} {{ parent() }} - Gestion des développeurs {% endblock %}

{% block contenu %}


<div class="page-title">
    <div class="clearfix"></div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
            <div class="x_title">
            <h1>Gestion des développeurs</h1>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="tile-stats">
                        <div class="icon"><i class="fa fa-laptop"></i>
                        </div>
                        <div class="count">{{count[0]}}</div>

                        <h3>Développeurs</h3>
                    </div>
                    </div>
                    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="tile-stats">
                        <div class="icon"><i class="fa fa-graduation-cap"></i>
                        </div>
                        <div class="count">{{countResp[0]}}</div>

                        <h3>Responsables</h3>
                    </div>
                    </div>
                    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="tile-stats">
                        <div class="icon"><i class="fa fa-code"></i>
                        </div>
                        <div class="count">{{countProjet[0]}}</div>

                        <h3>Projets</h3>
                    </div>
                    </div>
                    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="tile-stats">
                        <div class="icon"><i class="fa fa-check-square-o"></i>
                        </div>
                        <div class="count">{{ended[0]}}</div>

                        <h3>Projets terminés</h3>
                    </div>
                    </div>
                </div>

                <h2>Liste des équipes</h2>
                {% if form.valide is defined %}
                    {% if form.valide == true %}
                        <h1 class="h3 mb-3 font-weight-normal alert-success">{{ form.message }}</h1>
                    {% else %}
                        <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1>
                    {% endif %}
                {% endif %}

                <div class="form-group pull-left">
                    <input type="text" class="search form-control" placeholder="Recherche">
                </div>
                <span class="counter pull-left"></span>          
                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap results" cellspacing="0" width="100%" height="100%" style="margin-bottom: 10%;">
                        <thead>
                        <tr>
                            <th style="width: 10%;">Nom</th>
                            <th style="width: 10%;">Prénom</th>
                            <th style="width: 25%;">Email</th>
                            <th>Numéro de téléphone</th>
                            {% if session.role == 1 %}
                            <th style="width: 5%;">Gérer</th>
                            {% endif %}
                        </tr>
                        <tr class="warning no-result">
                            <td colspan="10"><i class="fa fa-warning black">Pas de résultat</i></td>
                        </tr>
                        </thead>
                        <tbody>
                            {% for dev in dev %}
                                <tr>
                                    <td>
                                        <span>{{dev.nom}}</a>
                                    </td>
                                    <td><span>{{dev.prenom}}</span></td>
                                    <td>
                                        <a href="index.php?page=utilisateurinfo&id={{dev.idDev}}"><img src="production/images/user.png" class="avatar" alt="Avatar">&nbsp;<span>{{dev.idDev}}</span></a>
                                    </td>               
                                    <td>{{dev.tel}}</td>
                                    {% if session.login is defined %}
                                    {% if session.role == 1 %}
                                    <td>
                                        <div class="btn-group btn-group-lg">
                                            <a href="index.php?page=utilisateurmodif&id={{dev.idDev}}" class="btn btn-primary" style="font-size: 12px; padding: 5px 10px;"><span class="glyphicon glyphicon-pencil white" aria-hidden="true"></span></a>
                                        </div>
                                    </td>
                                    {% endif %}
                                    {% endif %}
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal  Ajout/Suppression-->
{# {% include "developpeur/developpeur-ajout.html.twig" %} #}

{% endblock %}